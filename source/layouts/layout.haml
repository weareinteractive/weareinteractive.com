!!!5
/[if lt IE 7] <html class="no-js lt-ie9 lt-ie8 lt-ie7">
/[if IE 7] <html class="no-js lt-ie9 lt-ie8">
/[if IE 8] <html class="no-js lt-ie9">
%html.no-js
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "width=device-width", :name => "viewport"}
    %title= data.site.name
    %meta{:content => data.site.version, :name => "version"}
    %meta{:content => data.site.description, :name => "description"}
    %link{ rel: "apple-touch-icon-precomposed", sizes: "144x144", href: "apple-touch-icon-144x144-precomposed.png" }
    %link{ rel: "apple-touch-icon-precomposed", sizes: "120x120", href: "apple-touch-icon-120x120-precomposed.png" }
    %link{ rel: "apple-touch-icon-precomposed", sizes: "114x114", href: "apple-touch-icon-114x114-precomposed.png" }
    %link{ rel: "apple-touch-icon-precomposed", sizes: "72x72", href: "apple-touch-icon-72x72-precomposed.png" }
    %link{ rel: "apple-touch-icon-precomposed", sizes: "57x57", href: "apple-touch-icon-57x57-precomposed.png" }
    %link{ rel: "apple-touch-icon-precomposed", href: "apple-touch-icon-precomposed.png" }
    %link{ rel: "shortcut icon", href: "favicon.png" }
    %link{ rel: "icon", type: "image/ico", href: "favicon.ico" }

    = stylesheet_link_tag "http://fonts.googleapis.com/css?family=Titillium+Web:400,300", "site"
    = javascript_include_tag  "modernizr"
    = google_analytics_tag

  %body{:class => page_classes}
    %header#header.navbar.navbar-fixed-top{role:"banner"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar

          %a.navbar-brand{title: "We Are Interactive", href: "#main"}
            We Are Interactive

        %nav.collapse.navbar-collapse.navbar-right{role:"navigation"}
          %ul.nav.navbar-nav
            %li
              %a{title: "Home", href: "#home"} Home
            %li
              %a{title: "Projekte", href: "#portfolio"} Projekte
            %li
              %a{title: "Leistungen", href: "#services"} Leistungen
            %li
              %a{title: "Über uns", href: "#about"} Über uns
            %li
              %a{title: "Kontakt", href: "#contact"} Kontakt

    #background

    #main
      = yield

      %footer#footer.wrapper
        .container
          .row.content
            .description.col-md-12
              We Are Interactive, Zeppelinstr. 55, 81669 München, Deutschland
              %br
              +49 (0) 89 - 62286775,
              %a{title: "office@weareinteractive.com", href: "mailto:office@weareinteractive.com"}office@weareinteractive.com.com
              ,
              %a{title: "Impressum", "data-toggle" => "modal", href: "#imprintModal"}Impressum

    = partial "partials/imprint"
    = javascript_include_tag "http://maps.google.com/maps/api/js?sensor=true", "main"
